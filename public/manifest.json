{
  "manifest_version": 2,

  "name": "Social Grana Extra",
  "description": "Um jeito f√°cil de ganhar um extra com meios sociais!",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Social Grana Extra"
  },
  "icons": {
    "192": "logo192.png",
    "512": "logo512.png"
  },
  "background": {
    "scripts": ["scripts/background/start.js", "scripts/background/gni.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["scripts/gni/gniLogin.js", "scripts/gni/gniGoToWork.js"]
    }
  ],
  "permissions": ["alarms", "tabs", "<all_urls>", "*://*/*"]
}
